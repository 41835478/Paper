
  function togglePolicyNotes(linkElement) {
      var rightsSection = document.getElementById("rights");
      if (rightsSection.style.display == "none") {
          rightsSection.style.display = "";
          linkElement.innerHTML = "Hide policy notes";
      } else {
          rightsSection.style.display = "none";
          linkElement.innerHTML = "Show policy notes";
      }
  }

